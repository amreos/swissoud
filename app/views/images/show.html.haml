#pic_show.row
  .col-md-12.col-md-offset-3
    .panel.panel-default
      .panel-heading.pic_image
        = image_tag @image.picture.url
      .panel-body
        %h1= @image.name
      .panel-footer
        .row
          .col-md-6
            %p.user
              By
              = @image.user.email
          .col.md-6
            .btn-group.pull-right
              = link_to like_image_path(@image), method: :put, class: "btn btn-default" do
                %span.glyphicon.glyphicon-thumbs-up
                = @image.get_upvotes.size
                
                
              -if user_signed_in?
                = link_to "Edit", edit_image_path, class: "btn btn-info"
                = link_to "Delete", image_path, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"